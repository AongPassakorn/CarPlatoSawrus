<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.Pages.ContentFlyoutPage1"
            FlyoutLayoutBehavior="Popover">

    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout">
            <StackLayout>
                <Label 
                    Text="Flyout"
                    TextColor="White"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage Title="Content">
            <StackLayout>
                <Label Text="Content" />
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Detail>
    
</FlyoutPage>