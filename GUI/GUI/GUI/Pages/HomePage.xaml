<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI.Pages.HomePage"
             Title="HomePage"
             FlyoutLayoutBehavior="Popover">
    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout">
            <StackLayout>
                <Label 
                    Text="Flyout"
                    TextColor="White"/>
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage Title="Content">
            <VerticalStackLayout>
                <Label 
                    Text="The Home Page"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"/>
                <Button
                    Text="NextPage"
                    HeightRequest="50"
                    WidthRequest="100"
                    Margin="100"
                    Clicked="OnClickedToFlyoutPage1"/>  
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Detail>
    
</FlyoutPage>